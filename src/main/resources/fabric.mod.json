{
  "schemaVersion": 1,
  "id": "scriptbridge-fabric",
  "version": "${version}",
  "name": "ScriptBridge-Fabric",
  "description": "A Fabric mod that enables dynamic JavaScript (GraalVM) scripting for both client and server, featuring hot reloading and easy API access.",
  "authors": [],
  "contact": {},
  "license": "MIT",
  "icon": "assets/scriptbridge-fabric/icon.png",
  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "net.mingpixel.scriptbridgeFabric.client.ScriptbridgeFabricDataGenerator"
    ],
    "client": [
      "net.mingpixel.scriptbridgeFabric.client.ScriptbridgeFabricClient"
    ],
    "main": [
      "net.mingpixel.scriptbridgeFabric.ScriptbridgeFabric"
    ]
  },
  "mixins": [
    "scriptbridge-fabric.mixins.json",
    {
      "config": "scriptbridge-fabric.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": "*",
    "minecraft": "${minecraft_version}"
  }
}
